<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_wardy"
    tools:context="com.invictos.ssid.wardy_user.InicioActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="179dp"
        android:layout_height="189dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/logo_wardy"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="103dp"
        app:layout_constraintVertical_bias="1.0" />




    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/welcome"
        android:textColor="#ffffff"
        android:textSize="13sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editText_user"
        app:layout_constraintRight_toRightOf="@+id/editText_user"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_user" />

        <EditText
            android:id="@+id/editText_user"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/button_white"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/user"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="180dp"
            android:textSize="16sp"
            android:textColor="@color/green_wardy"
            android:textColorHint="@color/green_wardy"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/editText_password"
            app:layout_constraintRight_toRightOf="@+id/editText_password"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="12dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText_password" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:background="@drawable/button_white"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/contraseÃ±a"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="180dp"
            android:textSize="16sp"
            android:textColor="@color/green_wardy"
            android:textColorHint="@color/green_wardy"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/button_login"
            android:layout_marginTop="293dp"
            app:layout_constraintTop_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/button_login" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="250dp"
            android:layout_height="48dp"

            android:background="@drawable/login_button"
            android:fontFamily="sans-serif-medium"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="51dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_password" />



    <TextView
        android:id="@+id/textFrase"
        android:background="@drawable/button_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Un viaje seguro"
        android:textSize="20sp"
        android:textColor="@color/green_wardy"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
